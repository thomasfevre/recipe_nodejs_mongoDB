<h1 class="pb-4 pt-4">Explore Categories</h1>


<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
  <% if(typeof categories !== 'undefined' && categories.length > 0) { %>
    <% categories.forEach(function(category, index){ %>
    <a href="/categories/<%= category %>" class="col text-center category__link shadow-lg">
        <img src="/img/<%= category %>.png" alt="<%- category %>" loading="lazy" height="50" width="80">
      <div class="pt-1"><%= category %></div>
    </a>
    <% }) %>
  <% } else { %>
    <p>No items found.</p>
  <% } %>
</div>

<h4 class="pt-4">Explore Sub-Categories</h4>

<div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
  <% if(typeof subCategories !== 'undefined' && subCategories.length > 0) { %>
    <% subCategories.forEach(function(subCategory, index) { %>
      <a href="/categories/<%= subCategory %>" class="col text-center category__link shadow-lg">
        <img src="/img/<%= subCategory %>.png" alt="<%- subCategory %>" loading="lazy" height="50" width="70">
      <div class="pt-1"><%= subCategory %></div>
    </a>
    <% }) %>
  <% } %>
</div>