<section style="background-image: url(/images/menu-bg.png);"
    class="our-menu section bg-light repeat-img" id="menu">
    <div class="sec-wp">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="sec-title text-center mb-5">
                        <p class="sec-sub-title mb-3">Recipes</p>
                        <h2 class="h2-title">wake up early, <span>eat fresh & healthy</span></h2>
                        <div class="sec-title-shape mb-4">
                            <img src="/images/title-shape.svg" alt="">
                        </div>
                    </div>
                </div>
            </div>
            <div class="menu-tab-wp">
                <div class="row">
                    <div class="col-lg-12 m-auto">
                        <div class="menu-tab text-center">
                            <ul class="filters">
                                <div class="filter-active"></div>
                                <li class="filter" data-filter=".all, .breakfast, .lunch, .dinner" aria-label="all">
                                    <img src="/images/menu-1.png" alt="">
                                    All
                                </li>
                                <li class="filter" data-filter=".breakfast" aria-label="breakfast">
                                    <img src="/images/menu-2.png" alt="">
                                    Breakfast
                                </li>
                                <li class="filter" data-filter=".lunch" aria-label="lunch">
                                    <img src="/images/menu-3.png" alt="">
                                    Lunch
                                </li>
                                <li class="filter" data-filter=".dinner" aria-label="dinner">
                                    <img src="/images/menu-4.png" alt="">
                                    Dinner
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="menu-list-row">
                <div class="row g-xxl-5 bydefault_show" id="menu-dish">

                  <div class="row row-cols-1 row-cols-lg-5 g-2 g-lg-5">
                    <% if(typeof food.latest !== 'undefined' && food.latest.length > 0) { %>
                      <% food.latest.forEach(function(recipe, index){ %>
                      
                        <div class="col-lg-4 col-sm-6 dish-box-wp all" data-cat="all">
                          <div class="dish-box text-center">
                              <a href="/recipe/<%= recipe._id %>" class="col text-center">
                                <div class="category__img category__img--large">
                                  <img src="/uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
                                </div>
                              
                                <div class="dish-title">
                                    <h3 class="h3-title"><%= recipe.name %></h3>
                                    <p>120 calories</p>
                                </div>
                                <div class="dish-info">
                                    <ul>
                                        <li>
                                            <p>Type</p>
                                            <b>Non Veg</b>
                                        </li>
                                        <li>
                                            <p>Persons</p>
                                            <b>2</b>
                                        </li>
                                    </ul>
                                </div>
                                <div class="dist-bottom-row">
                                    something
                                </div>
                              </a>
                          </div>
                      </div>
                     

                      
                      <% }) %>
                    <% } else { %>
                      <p>No items found.</p>
                    <% } %>

