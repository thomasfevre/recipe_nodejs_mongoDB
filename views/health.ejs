<div class="container-fluid health-container">

  <div class="row">
    <!-- Articles List (3/4 width) -->
    <div class="col-md-9 pt-5">
      <h2 class="section-title"><small>Latest</small>Articles</h2>
      <div id="articlesList" class="article-grid">
        <% if(articles != '') { %>
          <% articles.forEach(function(article, index){ %>
            <div class="article-card">
              <div class="article-image" style="background-image: url('<%= article.image || '/imgs/default-article.jpg' %>');"></div>
              <div class="article-content">
                <h3 class="article-title"><%= article.title %></h3>
                <p class="article-summary"><%= article.summary %></p>
                <p class="article-date"><small class="text-muted">Posted on <%= article.createdAt.toDateString() %></small></p>
                <a href="/article/<%= article._id %>" class="btn btn-primary read-more">Read More</a>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="no-articles">No articles found.</p>
        <% } %>
      </div>
    </div>

    <!-- Sidebar (1/4 width) -->
    <div class="col-md-3 sidebar">
      <!-- Small explanation of the page -->
      <div class="sidebar-section">
        <h3 class="sidebar-title">What's here?</h3>
        <p class="sidebar-text">Welcome to my Health & Wellness Blog! Here you'll find the latest articles on nutrition, fitness, mental health, and overall well-being. Stay informed and inspired on your journey to a healthier lifestyle.</p>
      </div>

      <!-- Tags List -->
      <div class="sidebar-section">
        <h3 class="sidebar-title">Tags</h3>
        <div id="tagsList" class="tags-list">
          <% if(tags != '') { %>
            <% tags.forEach(function(tag){ %>
              <a href="/health/<%= tag %>" class="tag-badge"><%= tag %></a>
            <% }) %>
          <% } else { %>
            <p class="no-tags">No tags found.</p>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
