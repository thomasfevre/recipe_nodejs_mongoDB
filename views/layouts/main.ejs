<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Balanced Diet</title>

  <% 
    const logoNumber = Math.floor(Math.random() * 9) + 1;
    const logoSrc = `/logo/circle_logo_${logoNumber}.png`;
  %>
  <link rel="icon" type="image/x-icon" href="<%= logoSrc %>">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;500&display=swap" rel="stylesheet">
  <!-- for icons  -->
  <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
  <!-- bootstrap  -->
  <!-- <link rel="stylesheet" href="/public/js/bootstrap.min.css"> -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">

  <!-- for swiper slider  -->
  <link rel="stylesheet" href="/js/swiper-bundle.min.css">

  <!-- fancy box  -->
  <link rel="stylesheet" href="/js/jquery.fancybox.min.css">
   
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/style2.css">
  <link rel="stylesheet" href="/css/styles3.css">
</head>
<body>
  
  <div class="container-xxl px-md-5 bg-white shadow-lg">

    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-4 mb-4">
    
      <div class="site-header">
        <div class="container header-logo">
            <div class="row">
                <div class="col-lg-4">
                    <div class="header-logo">
                        <a href="/">
                            <img src="<%= logoSrc %>" width="40" height="40" alt="Logo">
                            <span class="logo_title">Balanced Diet</span>                            
                        </a>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="main-navigation">
                        <button class="menu-toggle"><span></span><span></span></button>
                        <nav class="header-menu">
                            <ul class="menu food-nav-menu">
                              <li><a href="/" class="nav-link px-2 link-secondary">Home</a></li>
                              <li><a href="/categories" class="nav-link px-2 link-secondary">Categories</a></li>
                              <li><a href="/submit-recipe" class="nav-link px-2 link-secondary">Submit</a></li>
                              <li><a href="/health-tips" class="nav-link px-2 link-secondary">Health Tips</a></li>
                              <li><a href="/about" class="nav-link px-2 link-secondary">About Me</a></li>
                            </ul>
                        </nav>
                        <div class="header-right">
                            <form action="/search" method="POST"  class="header-search-form for-des">
                                <input type="search" name="searchTerm" class="form-input" placeholder="Search..." aria-label="Search">
                                <button type="submit">
                                    <i class="uil uil-search"></i>
                                </button>
                            </form>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>

    </header>
    

    <main>
      <%- body -%>
      <button id="scrollToTopBtn"  title="Go to top"><i class="bi bi-arrow-up"></i></button>
    </main>

    <footer class="py-5">
      <p>Build by Thomas with <i class="bi bi-suit-heart-fill text-danger"></i></p>
    </footer>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
  <script src="/js/script.js"></script>

   <!-- jquery  -->
   <script src="/js/jquery-3.5.1.min.js"></script>
   <!-- bootstrap -->
   <script src="/js/bootstrap.min.js"></script>
   <script src="/js/popper.min.js"></script>

   <!-- fontawesome  -->
   <script src="/js/font-awesome.min.js"></script>

   <!-- swiper slider  -->
   <script src="/js/swiper-bundle.min.js"></script>

   <!-- mixitup -- filter  -->
   <script src="/js/jquery.mixitup.min.js"></script>

   <!-- fancy box  -->
   <script src="/js/jquery.fancybox.min.js"></script>

   <!-- parallax  -->
   <script src="/js/parallax.min.js"></script>

   <!-- gsap  -->
   <script src="/js/gsap.min.js"></script>

   <!-- scroll trigger  -->
   <script src="/js/ScrollTrigger.min.js"></script>
   <!-- scroll to plugin  -->
   <script src="/js/ScrollToPlugin.min.js"></script>
   <!-- rellax  -->
   <!-- <script src="/js/rellax.min.js"></script> -->
   <!-- <script src="/js/rellax-custom.js"></script> -->
   <!-- smooth scroll  -->
   <script src="/js/smooth-scroll.js"></script>
   <!-- custom js  -->
   <script src="/js/main.js"></script>
</body>
</html>