<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="mb-4"><%= article.title %></h1>
      <div class="row">
        <div class="col-6">
          <p class="text-muted">Posted on <%= article.createdAt.toDateString() %></p>
          <div class="mb-4">
            <% article.tags.forEach(function(tag){ %>
              <span class="badge bg-secondary me-2"><%= tag %></span>
            <% }) %>
          </div>
        </div>
        <div class="col-6">
          <img src="<%= article.image %>" alt="<%= article.title %>" class="img-fluid mb-4 rounded">
        </div>
      </div>
      <div class="article-content">
        <%= article.content %>
      </div>
    </div>
  </div>
</div>
